<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.zadaca.ipand.tasky.MainActivity">

    <TextView
        android:id="@+id/tvTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/HereAreYourTasks"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/lvTasks"
        android:layout_above="@+id/bNewTask"
        android:layout_below="@+id/tvTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/bNewTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/NewTask"
        android:background="@color/btbg"
        />

</RelativeLayout>
